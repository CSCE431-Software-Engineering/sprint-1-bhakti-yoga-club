<!-- app/views/attendances/show.html.erb -->
<% if current_member.is_admin? || current_member.id == @attendance.member_id %>

  <h1>Attendance Details</h1>

    <h2>Member Information</h2>
    <p><strong>Member ID:</strong> <%= @attendance.member_id %></p>
    <p><strong>Name:</strong> <%= @attendance.member.full_name %></p>
    <p><strong>Email:</strong> <%= @attendance.member.email %></p>
    <!-- Add any other member attributes you want to display -->

    <br>

    <h3>Event Information</h3>
    <p><strong>Event ID:</strong> <%= @attendance.event_id %></p>
    <p><strong>Name:</strong> <%= @attendance.event.name %></p>
    <p><strong>Location:</strong> <%= @attendance.event.location %></p>
    <!-- Add any other event attributes you want to display -->

    <br>

    <h4>Time Information</h4>

  <% if @attendance.time_arrived.present? %>
    <p><strong>Arrival Time:</strong> <%= @attendance.time_arrived.strftime('%H:%M:%S') %></p>
  <% else %>
    <p>No arrival time information available for this attendance item.</p>
  <%end%>

  <% if @attendance.time_departed.present? %>
    <p><strong>Departure Time:</strong> <%= @attendance.time_departed.strftime('%H:%M:%S') %></p>
  <% else %>
    <p>No departure time information available for this attendance item.</p>
  <%end%>

  <%= link_to 'Edit', edit_attendance_path(@attendance) %>
  <%= button_to "Delete", @attendance, method: :delete %>

  <%= link_to 'Back to Attendance Items', attendances_path %>

<% end %>