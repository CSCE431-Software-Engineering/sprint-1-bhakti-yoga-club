<div class="container mt-5 text-center">
  <p style="color: green"><%= notice %></p>
  <%= link_to 'Back', root_path %>

  <h1>Events</h1>

  <%= month_calendar(events: @events) do |date, events| %>
    <div class= "day">
      <%= date.day%>
    </div>

    <% events.each do |event| %>
      <div class="card-header">
        <h5 class="card-title">
          <%= link_to event.name, event %>
        </h5>
      </div>
      <div class="card-body">
        <p class="card-text">
          <%= event.location%>
        </p>
      </div>

      <div class="card-footer">
        <p class="card-text">
          From: <%= event.start_time.strftime("%A, %B %d, %Y at %I:%M %p")%>
        </p>
        <p class="card-text">
          To: <%= event.end_time.strftime("%A, %B %d, %Y at %I:%M %p")%>
        </p>
      </div>
    <% end %>
  <% end %>

  <div id="events">
    <% @events.each do |event| %>
      <%= render event %>
      <p>
        <%= link_to "Show this event", event %>
      </p>
    <% end %>
  </div>

  <%= link_to "New event", new_event_path %>

</div>
